<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>管理者ログイン</h2>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <div class="field">
        <%= f.label "メールアドレス" %><br />
    </div>
    <div class="col-sm-3 px-sm-0">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <div class="field">
        <%= f.label "パスワード" %><br />
    </div>
    <div class="col-sm-3 px-sm-0">
        <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    </div>
  </div>

<% end %>

<%= render "admin/shared/links" %>
