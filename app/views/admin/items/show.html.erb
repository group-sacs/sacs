<h1>商品詳細</h1>

  <%= image_tag @item.image, size: "300x300" %>
<h4>商品名</h4>
  <%= @item.name %>
<h4>商品説明</h4>
  <%= @item.explamatory_text %>
<h4>ジャンル</h4>
  <%= @item.genre.name %>
