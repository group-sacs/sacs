<h1>商品一覧</h1>

<%= link_to "+", new_admin_item_path %></p>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

<% @items.each do |item| %>

<tbody>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item.id)%></td>
    <!--3桁区切りにしたい-->
　　<td><%= item.without_tax_price %>円</td>
    <td><%= item.genre.name %></td>
    <td>
      <% if  item.is_sales_status == true %>
        販売中
      <% else %>
        販売停止中
      <% end %>
    </td>
  </tr>
</tbody>
<% end %>
</table>

