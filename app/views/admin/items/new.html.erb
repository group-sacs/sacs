<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path , method: :post do |f| %>

<h4>商品画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
<h4>商品名</h4>
<!--箱の中に文字入れたい-->
  <%= f.text_field :name %>
<h4>商品説明</h4>
  <%= f.text_area :explamatory_text %>
<h4>ジャンル</h4>
<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
<h4>税抜価格</h4>
  <%= f.text_area :without_tax_price %>円
<h4>販売ステータス</h4>
  <%= f.radio_button :is_sales_status, true %>
    <%= f.label :is_sales_status, "販売中", {value: :true, style: "display: inline-block;"} %>
  <%= f.radio_button :is_sales_status, false %>
    <%= f.label :is_sales_status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  <%= f.submit '新規登録', class:"btn btn-success" %>

<% end %>
