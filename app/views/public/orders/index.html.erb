注文履歴一覧
<table>
  <tr>
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>
    <% @orders.each do |order| %>
      <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.delivery_postal_code %><br>
            <%= order.delivery_address %><br>
            <%= order.delivery_address_name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.order_details.sum { |cart_item| (cart_item.item.without_tax_price * 1.1).floor * cart_item.quantity } + 800 %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
</table>
