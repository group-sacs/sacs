
<h1>ショッピングカート</h1>
　<div style="display: flex; justify-content: flex-end;">
  <%= link_to "全部削除",  cart_items_destroy_all_path, method: :delete, class: 'btn btn-primary' %>
  </div>
<table class="table table-bordered">
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <% if cart_item.quantity == 0 %>
     <% else %>
       <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.without_tax_price * 1.1).floor %></td>
        <td>
          <%= form_for cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :quantity, options_for_select((0..100).map { |i| [i, i] }, selected: cart_item.quantity) %>
            <%= f.submit "数量の変更を確定" %>
          <% end %>
        </td>
        <td><%= (cart_item.item.without_tax_price * 1.1).floor * cart_item.quantity %></td>
        <td><%= link_to "削除",    cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
      <% end %>
    <% end %>
    <tr>
      <td colspan="3">合計金額</td>
      <td><%= @cart_items.sum { |cart_item| (cart_item.item.without_tax_price * 1.1).floor * cart_item.quantity } %></td>
    </tr>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %></br>
</br>
