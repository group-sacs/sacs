<h1>商品一覧(全<%=@items.where('created_at > ?', Date.today).count %>件)</h1>

<table>
  <thead>
  </thead>
  <tbody>
    <% @items.each do |item| %>
     <tr><td><%= link_to image_tag(item.image, width: '100', height: '100'), item_path(item) %></td></tr>
       <tr> <td><%= item.name %></td></tr>
       <tr> <td>￥<%= item.without_tax_price %></td>/<tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>